#!/usr/bin/bash

WD=$(pwd)
DIR=${WD: -17}

if test "$DIR" != "perltdotcom"
  then
    echo "$0 must be run from the root project directory"
    exit 0;
fi

hugo
cd public
git add *
git commit -m 'Generate site'
git fetch -p
git rebase origin master
git push origin master
cd ..
git add public
git commit -m 'Deploy site'
